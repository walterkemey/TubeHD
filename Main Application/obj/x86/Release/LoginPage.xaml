<Page
    x:Class="PrimeTube.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Youtube_Music_Video_Downloader__W10_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:PrimeTube.Controls"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:ConnectionId='1' x:Name="backButton_Channel" Style="{StaticResource NavigationBackButtonNormalStyle2}"
                Margin="20,5,0,0"
                                    VerticalAlignment="Top"
                                                                      
                                    AutomationProperties.Name="Back"
                                    AutomationProperties.AutomationId="BackButton"
                                    AutomationProperties.ItemType="Navigation Button" Grid.Row="0"/>

        <WebView x:ConnectionId='2' x:Name="WebView1" Grid.Row="1"
                                                                    
                                                              
                                                                  
                                                                                                                                                                                                                                                                                                                              />


        <ProgressRing x:ConnectionId='3' x:Name="ProgressRing1" Height="100" Width="100" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Page>

