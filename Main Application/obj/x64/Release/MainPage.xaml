                                                    <!-- ratings-->
                                                    <StackPanel Orientation="Horizontal" Margin="0,10,20,0">
                                                        <TextBlock x:ConnectionId='67' Name="Textblock_videoLikes" FontSize="13" Text="{Binding video.Statistics.LikeCount, Converter={StaticResource integerCommasSeperatorConverter}}" Foreground="Black"/>
                                                        <Image  Source="Assets/YouTube/ic_like.png" Height="30" Width="30" Margin="10,-10,-10,-10"/>

                                                        <TextBlock x:ConnectionId='68' Name="Textblock_videoDislikes" FontSize="13" Text="{Binding video.Statistics.DislikeCount, Converter={StaticResource integerCommasSeperatorConverter}}" Foreground="Black" Margin="40,0,0,0"/>
                                                        <Image  Source="Assets/YouTube/ic_dislike.png" Height="30" Width="30" Margin="10,-20,-10,-10"/>
                                                    </StackPanel>
                                                </Grid>

                                                <controls:RichTextDisplay Text="{Binding video.Snippet.Description}" FontSize="13" Margin="0,15,0,0"/>


                                                <Grid Width="900" Height="0.5" Background="Gray" Margin="0,20,0,0"/>
