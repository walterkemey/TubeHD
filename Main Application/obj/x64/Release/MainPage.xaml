                    </Grid.RowDefinitions>

                    <TextBlock x:ConnectionId='14' FontSize="13" FontWeight="Bold"                               Foreground="Black" TextWrapping="Wrap" MaxLines="1" Grid.Row="0"/>
                    <TextBlock x:ConnectionId='15' FontSize="13"                                     Foreground="Gray" TextWrapping="Wrap" MaxLines="3" Grid.Row="1" />
                    <TextBlock x:ConnectionId='16' FontSize="14"                                                                                           Foreground="Gray" Grid.Row="2" HorizontalAlignment="Left" FontWeight="Bold" TextWrapping="Wrap"/>
                </Grid>
            </Grid>
        </DataTemplate>

        <Storyboard x:ConnectionId='2' x:Name="Storyboard_Search_ScrollIn"                                                 >
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Search">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_Search">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:ConnectionId='3' x:Name="Storyboard_Search_ScrollOut"                                                  >
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_Search">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
            </DoubleAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Search">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:ConnectionId='4' x:Name="Storyboard_Video_ScrollIn"                                                >
            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" From="770" To="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="Grid_VideoContent"/>
            <DoubleAnimation Duration="0:0:0.3" From="1370" To="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="Grid_VideoContent"/>
            <DoubleAnimation Duration="0:0:0.3" From="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
        </Storyboard>
        <Storyboard x:ConnectionId='5' x:Name="Storyboard_Video_ScrollOut"                                                 >

            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" From="0" To="770" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" From="0" To="1370" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" From="1" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
        </Storyboard>
        <Storyboard x:ConnectionId='6' x:Name="Storyboard_Video_ScrollOut_Small"                                                       >
            <DoubleAnimation Duration="0:0:0.3" From="0" To="310.5" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="Grid_VideoContent"/>
            <DoubleAnimation Duration="0:0:0.3" From="0" To="547.5" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="Grid_VideoContent"/>
            <DoubleAnimation Duration="0:0:0.3" From="1" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_VideoContent"/>
            <DoubleAnimation Duration="0:0:0.3" To="0.2" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" To="0.2" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Storyboard.TargetName="Grid_VideoContent" d:IsOptimized="True"/>
        </Storyboard>

        <Storyboard x:ConnectionId='7' x:Name="Storyboard_VideoMessage_Play"                                                   >
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Textblock_VideoMsg">
                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="0.5"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:ConnectionId='8' x:Name="Storyboard_Channel_SlideIn">
            <DoubleAnimation Duration="0:0:0.3" From="1400"  To="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="Grid_ChannelPage" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" From="-800" To="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="Grid_ChannelPage" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" From="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_ChannelPage" d:IsOptimized="True"/>
        </Storyboard>
        <Storyboard x:ConnectionId='9' x:Name="Storyboard_Channel_SlideOut"                                                  >
            <DoubleAnimation Duration="0:0:0.3" To="1400" From="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="Grid_ChannelPage" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" To="-800" From="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="Grid_ChannelPage" d:IsOptimized="True"/>
            <DoubleAnimation Duration="0:0:0.3" To="0" From="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_ChannelPage" d:IsOptimized="True"/>
        </Storyboard>

        <Storyboard x:ConnectionId='10' x:Name="Storyboard_VideoCtlPanel_FadeIn">
            <DoubleAnimation Duration="0:0:0.3" From="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_VideoCtlPanel" d:IsOptimized="True"/>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_VideoCtlPanel">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:ConnectionId='11' x:Name="Storyboard_VideoCtlPanel_FadeOut">
            <DoubleAnimation Duration="0:0:0.3" From="1" To="0" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Grid_VideoCtlPanel" d:IsOptimized="True"/>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_VideoCtlPanel">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Style x:Key="ButtonStyle_PauseTemplate" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ButtonBackgroundThemeBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource ButtonForegroundThemeBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderThemeBrush}"/>
            <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}"/>
            <Setter Property="Padding" Value="12,4,12,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="grid"  Height="50" Width="50">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="0.5" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid" d:IsOptimized="True"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="FocusVisualWhite"/>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="FocusVisualBlack"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused"/>
                                    <VisualState x:Name="PointerFocused"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Image Source="Assets/YouTube/ic_vidcontrol_pause_play_01.png" Height="50" Width="50"/>

                            <Rectangle x:Name="FocusVisualWhite" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="1.5" StrokeEndLineCap="Square" Stroke="{ThemeResource FocusVisualWhiteStrokeThemeBrush}" StrokeDashArray="1,1"/>
                            <Rectangle x:Name="FocusVisualBlack" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="{ThemeResource FocusVisualBlackStrokeThemeBrush}" StrokeDashArray="1,1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
