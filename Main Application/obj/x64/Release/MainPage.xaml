                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition Height="30"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="8*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock FontSize="13" Text="Artist" Foreground="Gray" Margin="0,15,0,0" Grid.Row="0" Grid.Column="0"/>
                                                    <TextBlock FontSize="13" Text="Category" Foreground="Gray" Margin="0,15,0,0" Grid.Row="1" Grid.Column="0"/>
                                                    <TextBlock FontSize="13" Text="License" Foreground="Gray" Margin="0,15,0,0" Grid.Row="2" Grid.Column="0"/>

                                                    <TextBlock x:ConnectionId='64' Name="textblock_videoArtist" FontSize="13" Text="" Foreground="Gray" Margin="0,15,0,0" Grid.Row="0" Grid.Column="1"/>
                                                    <TextBlock x:ConnectionId='65' Name="textblock_videoCategory" FontSize="13" Text="Music" Foreground="Gray" Margin="0,15,0,0" Grid.Row="1" Grid.Column="1"/>
                                                    <TextBlock x:ConnectionId='66' Name="textblock_videoLicense" FontSize="13" Text="Standard YouTube License" Foreground="Gray" Margin="0,15,0,0" Grid.Row="2" Grid.Column="1"/>
                                                </Grid>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </PivotItem>
                                </Pivot>
                            </Grid>

                            <!-- playlist overlay -->
                            <Grid Grid.Row="1" 
                                          Visibility="{Binding IsPlaylist, Converter={StaticResource booleanToVisibilityConverter}}">

                                <ListView x:ConnectionId='52'
                                            x:Name="listview_VideoContent_Playlist"
                    
                                            SelectionMode="Single"
                                            IsItemClickEnabled="True" 
                
                                            ItemsSource="{Binding PlaylistItems}" 
                                            IsSwipeEnabled="False"
                                            Grid.Row="0"
                                
                                            Background="Gray"
                                            Visibility="Collapsed" ItemContainerStyle="{StaticResource ListViewItemStyle_Playlist}"
                            
                                                                                                
                                            >


                                    <ListView.ItemTemplate>
                                        <DataTemplate                                      >
                                            <Grid x:ConnectionId='53' Margin="10,0,10,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="30"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Column="0" Grid.Row="0">
                                                    <Image Stretch="Uniform"  Height="80">
                                                        <Image.Source>
                                                            <BitmapImage UriSource="Assets/YouTube/pref_subtitles_none.png" CreateOptions="None"
                                                                         DecodePixelHeight="49" DecodePixelWidth="69"
                                                                 />
                                                        </Image.Source>
                                                    </Image>
                                                    <Image Stretch="Uniform" Height="80">
                                                        <Image.Source>
                                                            <BitmapImage x:ConnectionId='57'                                                      CreateOptions="None"
                                                                                                                      
                                                                 />
                                                        </Image.Source>
                                                    </Image>
                                                </Grid>

                                                <Grid Grid.Column="1" Margin="10,0,0,0" Grid.Row="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*" MaxHeight="300"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock x:ConnectionId='55' FontSize="13" FontWeight="Bold"                               Foreground="White" TextWrapping="Wrap" Grid.Row="0"/>
                                                    <TextBlock x:ConnectionId='56' FontSize="13"                                     Foreground="White" TextWrapping="Wrap" Grid.Row="1" MaxLines="2"/>
                                                </Grid>

                                                <!-- published date -->
                                                <TextBlock x:ConnectionId='54' Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,0"
                                                                   FontSize="11"                                                                                           Foreground="White" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid x:ConnectionId='48' x:Name="Grid_VideoLoading" Visibility="Collapsed" Background="White" Opacity="0.5" 
                                  Grid.ColumnSpan="2"
                                  Grid.RowSpan="2"
                                                                   >

                        <ProgressRing Width="100" Height="100" 
                                              IsActive="True"/>
                    </Grid>
                </Grid>
            </Grid>

            <Grid x:ConnectionId='41' x:Name="Grid_LoginPage" Grid.Row="0" Grid.RowSpan="2" Background="White"
                          Visibility="Collapsed">

                <WebView x:ConnectionId='42' x:Name="WebView1" 
                                                                                    
                                                                              
                                                                                  
                                                                      
                                 
                                                                                    
                                                                                                          
                                                                                                         
                                                                                                    />


                <ProgressRing x:ConnectionId='43' x:Name="ProgressRing1" Height="100" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- Rating-->
        <layouts:RatingControl x:ConnectionId='36' x:Name="RatingControl1" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
